use("atomy")
use("concurrency")

main = me

start(token) := do:
  h = (2 .. 503) to-a reverse inject(me) [pid, id]:
    spawn: roundtrip(id, pid)

  h <- token

  roundtrip(1, h)

roundtrip(id, pid) :=
  loop:
    receive:
      .done ->
        return(nil)

      1 -> do:
        id println
        main <- .done

      token ->
        (pid <- (token - 1))

started = Time now
start(498)
p(Time now - started)
